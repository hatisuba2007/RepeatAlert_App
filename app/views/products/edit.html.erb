<h1>Update product</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>

      <%= f.label :brand %>
      <%= f.select :brand, [["ReFa", "ReFa"], ["PLOSION", "PLOSION"], ["SIXPAD", "SIXPAD"], ["MDNA SKIN", "MDNA SKIN"]], include_blank: "選択して下さい" %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :term %>
      <%= f.select :term, [["10日", "10"], ["20日", "20"], ["30日", "30"], ["40日", "40"], ["50日", "50"], ["60日", "60"]], include_blank: "選択して下さい" %>

      <%= f.submit "商品マスター変更", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>